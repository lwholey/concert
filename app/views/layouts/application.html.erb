<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= csrf_meta_tag %>
    <%= render 'layouts/stylesheets' %>
  </head>
  <body>
    <div class="container">
      <!-- Use following line to show the Blueprint grid -->
      <!-- <div class="container showgrid"> -->
        <%= render 'layouts/header' %>

        <section class="round">

        <% if @title == "Results"  %>
          <%= render 'shared/results' %>
        <% end %>

        <%= yield %>

        </section>
        <%= render 'layouts/footer' %>
        
        <%= debug(params) if Rails.env.development? %>
      </div>
    </body>
  </html>
