<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= csrf_meta_tag %>
    <%= render 'layouts/stylesheets' %>
  </head>
  <body>
    <!-- Include "showgrid" in the following line to show the Blueprint grid -->
    <div class="container"> 
      <%= render 'layouts/header' %>
      
      <div class = "span-24">

        <%= yield %>

      </div>

      <div class = "span-18 footer round last ">

        <%= render 'layouts/footer' %>

      </div>

    </div>
    <%= debug(params) if Rails.env.development? %>
  </body>
</html>
